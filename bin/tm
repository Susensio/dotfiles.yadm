#!/bin/bash
# Attach to the first unattached session or start a new session
#
[[ -f ~/.profile ]] && source ~/.profile
[[ -f ~/.config/profile ]] && source ~/.config/profile

if [[ -z "$TMUX" ]]; then
  mru="$($HOME/bin/sd/tmux/mru)"
  if [[ -n "$mru" ]]; then
    tmux attach -t "$mru"
  else
    tmux new-session
  fi
else
  echo "Already in tmux!"
fi
