# Change for fish shell?
set shell bash
set shellopts '-eu'
set ifs "\n"


# Mouse interaction
# waiting for next release
#set mouse

# Show hidden files
set hidden

set icons

# Use custom previewer in .local/bin
set previewer preview
map i $LESSOPEN='| preview %s' less -R $f

# use enter for shell commands
map <enter> shell-pipe

# execute current file (must be executable)
map x $$f
map X !$f

# dedicated keys for file opener actions
map o &mimeopen $f
map O $mimeopen --ask $f


cmd extract ${{
  set -f
  case $f in
    *.tar.bz|*.tar.bz2|*.tbz|*.tbz2) tar xjvf $f;;
    *.tar.gz|*.tgz) tar xzvf $f;;
    *.tar.xz|*.txz) tar xJvf $f;;
    *.zip) unzip $f;;
    *.rar) unrar x $f;;
    *.7z) 7z x $f;;
  esac
}}


cmd trash %{{
  set -f
  count=$(echo "$fx" | wc -l)
  if [[ $count == "1" ]]; then
    prompt="delete ${fx}? [y/N] "
  else
    prompt="delete $count files [y/N] "
  fi
  printf "$prompt"
  read -n1 ans
  [[ $ans == "y" ]] && rmv "$fx" && echo "deleted" || echo "deletion cancelled"
}}

map <delete> trash
