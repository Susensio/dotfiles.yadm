[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    dark = true
    side-by-side = true
    true-color = always
    hyperlinks = true
    features = everforest

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default

[include]
    path = everforest.config
