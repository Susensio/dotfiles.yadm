# Safe idempotent prepend to path
function add_path {
  if [ -d "$1" ]; then
    PATH=${PATH//":$1:"/:} #delete all instances in the middle
    PATH=${PATH/%":$1"/} #delete any instance at the end
    PATH=${PATH/#"$1:"/} #delete any instance at the beginning
    PATH="$1${PATH:+":$PATH"}" #prepend $1 or if $PATH is empty set to $1
  fi
}

# XDG Base Directory specification
export XDG_CONFIG_HOME=$HOME/.config
export XDG_CACHE_HOME=$HOME/.cache
export XDG_DATA_HOME=$HOME/.local/share
export XDG_STATE_HOME=$HOME/.local/state

# This could be needed before sourcing
add_path "$HOME/.local/bin"

export EDITOR="$(command -v nvim || command -v vim)"
export PAGER="less"
# incsearch only works from version 590
export LESS="$(test $(less --version | head -n1 | cut -d ' ' -f 2) -ge 590 && echo '--incsearch ' || true)-XRF --mouse --wheel-lines=3"
#
# Colorize man pages with bat
export MANPAGER="sh -c 'col -bx | bat -l man -p'"
export MANROFFOPT="-c"

# Source profile.d files
profile_d="$XDG_CONFIG_HOME/profile.d"
if [ -d "$profile_d" ]; then
  for file in "$profile_d"/*.sh; do
    source "$file"
  done
fi

# Source secrets
profile_secrets="$XDG_CONFIG_HOME/profile.secrets"
if [ -f "$profile_secrets" ]; then
  source "$profile_secrets"
fi

# Ensure priority
add_path "$HOME/.local/bin"
add_path "$HOME/bin"
